{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Sprotty",
            "type": "shell",
            "command": "yarn",
            "group": "build",
            "presentation": {
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$tsc",
                "$eslint-compact"
            ]
        },
        {
            "label": "Watch Sprotty",
            "type": "shell",
            "command": "yarn watch",
            "group": "none",
            "presentation": {
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}